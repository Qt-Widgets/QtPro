from PyQt5.QtWidgets import *
import sys
from PyQt5.QtCore import *
from PyQt5.QtGui import *


class InputBox(QLineEdit):
    def __init__(self):
        super(InputBox, self).__init__()
        self.setAlignment(Qt.AlignCenter)
        self.setMinimumHeight(30)
        self.setStyleSheet(self.__qss())

    def __qss(self):
        qss = """
        QLineEdit {
        color : black;
        background-color: #e9e9e9;
        border-radius:5px;
        font: 12pt "Calibri";
        }
        QLineEdit:focus {
        color : black;
        background-color: white;
        border : 1.5px solid #80CFF9;
        }
        QLineEdit:hover {
        color : black;
        background-color: white;
        border : 0.5px solid #99d8fa;
        border-radius:4px;
        }
        QLineEdit:hover:focus {
        color : black;
        background-color: white;
        border : 1.5px solid #80CFF9;
        }
        """
        return qss
